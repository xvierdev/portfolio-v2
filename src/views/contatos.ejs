<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contatos & Links - <%= data.profile.nome %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="perfil-card">
        <h1>Contatos & Links</h1>
        <div class="separador"></div>
        
        <!-- Formulário de Adição -->
        <section class="info-section">
            <h3>Adicionar Novo Contato</h3>
            <form class="recado-form form-adicionar" id="form-adicionar-contato">
                <div class="form-group">
                    <label for="tipo">Tipo:</label>
                    <select id="tipo" name="tipo" required>
                        <option value="">Selecione...</option>
                        <option value="email">E-mail</option>
                        <option value="telefone">Telefone</option>
                        <option value="linkedin">LinkedIn</option>
                        <option value="github">GitHub</option>
                        <option value="website">Website</option>
                        <option value="outro">Outro</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="label">Label (ex: E-mail Pessoal):</label>
                    <input type="text" id="label" name="label" required maxlength="100">
                </div>
                
                <div class="form-group">
                    <label for="valor">Valor (ex: email@example.com):</label>
                    <input type="text" id="valor" name="valor" required maxlength="255">
                </div>
                
                <div class="form-group">
                    <label for="link">Link (opcional, ex: mailto:email@example.com):</label>
                    <input type="text" id="link" name="link" maxlength="255">
                </div>
                
                <div class="form-group">
                    <label for="ordem">Ordem de Exibição:</label>
                    <input type="number" id="ordem" name="ordem" value="0" min="0">
                </div>
                
                <button type="submit" class="btn-save">Adicionar Contato</button>
            </form>
            
            <div id="feedback-message" class="mensagem-feedback"></div>
        </section>
        
        <!-- Lista de Contatos -->
        <section class="info-section">
            <h3>Contatos Cadastrados</h3>
            <div class="lista-contatos" id="lista-contatos">
                <p class="loading">Carregando contatos...</p>
            </div>
        </section>
    </div>

    <script>
        // Carregar contatos do banco
        async function carregarContatos() {
            try {
                const response = await fetch('/api/contatos');
                const contatos = await response.json();
                
                const listaContatos = document.getElementById('lista-contatos');
                
                if (contatos.length === 0) {
                    listaContatos.innerHTML = '<p>Nenhum contato cadastrado ainda.</p>';
                    return;
                }
                
                listaContatos.innerHTML = contatos.map(contato => `
                    <div class="recado-card contato-card" data-id="${contato.id}">
                        <div class="contato-info">
                            <div class="contato-header">
                                <strong class="contato-tipo">${contato.tipo.toUpperCase()}</strong>
                                <span class="contato-ordem">Ordem: ${contato.ordem}</span>
                            </div>
                            <h4>${contato.label}</h4>
                            <p class="contato-valor">${contato.valor}</p>
                            ${contato.link ? `<a href="${contato.link}" target="_blank" class="contato-link">Acessar</a>` : ''}
                        </div>
                        <div class="recado-actions">
                            <button onclick="editarContato(${contato.id})" class="icon-btn edit-icon-btn" title="Editar">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#28a745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                </svg>
                            </button>
                            <button onclick="deletarContato(${contato.id})" class="icon-btn delete-icon-btn" title="Excluir">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#dc3545" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="3 6 5 6 21 6"></polyline>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                </svg>
                            </button>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Erro ao carregar contatos:', error);
                document.getElementById('lista-contatos').innerHTML = '<p class="erro">Erro ao carregar contatos.</p>';
            }
        }
        
        // Adicionar novo contato
        document.getElementById('form-adicionar-contato').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = {
                tipo: document.getElementById('tipo').value,
                label: document.getElementById('label').value,
                valor: document.getElementById('valor').value,
                link: document.getElementById('link').value,
                ordem: parseInt(document.getElementById('ordem').value)
            };
            
            try {
                const response = await fetch('/api/contatos', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                const feedback = document.getElementById('feedback-message');
                
                if (response.ok) {
                    feedback.textContent = '✓ Contato adicionado com sucesso!';
                    feedback.className = 'mensagem-feedback sucesso';
                    feedback.style.display = 'block';
                    
                    // Limpar formulário
                    e.target.reset();
                    
                    // Recarregar lista
                    carregarContatos();
                    
                    setTimeout(() => {
                        feedback.style.display = 'none';
                    }, 3000);
                } else {
                    feedback.textContent = '✗ ' + (result.mensagem || 'Erro ao adicionar contato');
                    feedback.className = 'mensagem-feedback erro';
                    feedback.style.display = 'block';
                }
            } catch (error) {
                console.error('Erro ao adicionar contato:', error);
                const feedback = document.getElementById('feedback-message');
                feedback.textContent = '✗ Erro ao adicionar contato';
                feedback.className = 'mensagem-feedback erro';
                feedback.style.display = 'block';
            }
        });
        
        // Deletar contato
        async function deletarContato(id) {
            if (!confirm('Tem certeza que deseja excluir este contato?')) return;
            
            try {
                const response = await fetch(`/api/contatos/${id}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    carregarContatos();
                } else {
                    alert('Erro ao deletar contato');
                }
            } catch (error) {
                console.error('Erro ao deletar contato:', error);
                alert('Erro ao deletar contato');
            }
        }
        
        // Editar contato (modal inline)
        async function editarContato(id) {
            try {
                const response = await fetch(`/api/contatos/${id}`);
                const contato = await response.json();
                
                const novoTipo = prompt('Tipo:', contato.tipo);
                if (novoTipo === null) return;
                
                const novoLabel = prompt('Label:', contato.label);
                if (novoLabel === null) return;
                
                const novoValor = prompt('Valor:', contato.valor);
                if (novoValor === null) return;
                
                const novoLink = prompt('Link (opcional):', contato.link || '');
                
                const novaOrdem = prompt('Ordem:', contato.ordem);
                if (novaOrdem === null) return;
                
                const atualizacao = {
                    tipo: novoTipo,
                    label: novoLabel,
                    valor: novoValor,
                    link: novoLink,
                    ordem: parseInt(novaOrdem)
                };
                
                const updateResponse = await fetch(`/api/contatos/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(atualizacao)
                });
                
                if (updateResponse.ok) {
                    carregarContatos();
                } else {
                    alert('Erro ao atualizar contato');
                }
            } catch (error) {
                console.error('Erro ao editar contato:', error);
                alert('Erro ao editar contato');
            }
        }
        
        // Carregar contatos ao iniciar
        carregarContatos();
    </script>
</body>
</html>
